<% layout('layouts/boilerplate')%>
    <h1> Previous Launch Information </h1>
    <div class="row d-inline-flex justify-content-around">
        <% for (let launch in launchData) { %>
            <div class="card ml-3 mb-2" style="width: 18rem;">
                <%if(launchData[launch].links.mission_patch_small){ %>
                    <img class="card-img-top" src="<%=launchData[launch].links.patch.small%>" alt="Mission Patch">
                    <%} else {%>
                        <img class="card-img-top"
                            src="https://upload.wikimedia.org/wikipedia/commons/f/f2/SpaceX_Crew_Dragon_docking_with_the_International_Space_Station.jpg"
                            alt="Mission Patch">
                        <%}%>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=launchData[launch].flight_number%> - <%=launchData[launch].mission_name%>
                                </h5>
                                <p class="card-text">
                                    <%=launchData[launch].details%>
                                </p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Mission Year: <%=launchData[launch].date_utc%>
                                </li>
                                <li class="list-group-item">Rocket Used: <%=launchData[launch].rocket%>
                                </li>
                                <li class="list-group-item">Launched From:
                                    <%=launchData[launch].launchpad%>
                                </li>
                            </ul>
                            <div class="card-body">
                                <%if(launchData[launch].links.wikipedia){ %>
                                    <a href="<%=launchData[launch].links.wikipedia%>" class="card-link">Wikipedia</a>
                                    <%}%>
                                        <%if(launchData[launch].links.webcast){ %>
                                            <a href="<%=launchData[launch].links.webcast%>" class="card-link">Video
                                                Link</a>
                                            <%}%>

                            </div>
            </div>
            <% } %>
    </div>